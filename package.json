{
  "name": "stand-up-reminder",
  "version": "1.0.0",
  "description": "站立提醒系统",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development&& electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "stand-up",
    "reminder",
    "health"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.4.2",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.standup.reminder",
    "productName": "站立提醒系统",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "站立提醒系统"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "stand-up-reminder"
    }
  }
}
